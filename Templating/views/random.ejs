        <h2>This is an Even Number</h2>
    <% } else { %>
        <h2>This is an odd number</h2>
    <% } %>

    <!-- ------------------------------------2nd method -------------------------------------------------------- -->
    <h2>This is an : <%= num % 2 === 0? 'Even': 'Odd' %> Number</h2>


</body>

